= form_for @dev do |f|
  - if @dev.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dev.errors.count, "error")} prohibited this dev from being saved:"
      %ul
        - @dev.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :username
    = f.text_field :username
  .actions
    = f.submit 'Save'
