    -if post.dev
      =link_to post.dev.name, root_path(:dev=>post.dev.id)
  %hr

  .large-12.columns.fp-post
    = link_to "Click to Show First Post", first_post_post_path(post)

  .large-12.columns.description
    %p= raw post.description
  .large-4.columns.tzdate
    = post.published_at
  .large-8.columns.categories
    = post.categories.join(",")
